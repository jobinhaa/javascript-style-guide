{
    "root": true,
    "extends": [
        "./legacy.js",
        "../globals.js"
    ],
    "rules": {
        "func-names": ["off"],
        "indent": ["error", 4],
        "max-len": ["error", {
            "code": 120,
            "tabWidth": 4,
            "ignoreUrls": true,
            "ignoreComments": false
        }],
        "no-param-reassign": ["off"]
    }
}
